{
  "hosting": {
    "public": "src/frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/download",
        "destination": "/html/download.html"
      },
      {
        "source": "/gestionar-rutas",
        "destination": "/html/gestionar-rutas.html"
      },
      {
        "source": "/localidades",
        "destination": "/html/localidades.html"
      },
      {
        "source": "/login",
        "destination": "/html/login.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
