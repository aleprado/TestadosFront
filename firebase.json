{
  "hosting": {
    "public": "src/frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/gestionar-rutas", "destination": "/html/gestionar-rutas.html" },
      { "source": "/localidades", "destination": "/html/localidades.html" },
      { "source": "/login", "destination": "/html/login.html" },
      { "source": "/contacto", "destination": "/html/contacto.html" },
      { "source": "/politica", "destination": "/html/politica.html" },
      { "source": "/mapa", "destination": "/html/mapa.html" },
      { "source": "/", "destination": "/html/index.html" }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|html|json|svg|png|jpg|jpeg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "redirects": [
      { "source": "/rutas", "destination": "/gestionar-rutas", "type": 301 }
    ]
  }
}
