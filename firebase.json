{
  "hosting": {
    "public": "srs/frontend",  // Aseg√∫rate de que este sea el directorio correcto para tu contenido de frontend
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/upload",
        "destination": "/upload.html"
      },
      {
        "source": "/download",
        "destination": "/download.html"
      },
      {
        "source": "/manage-users",
        "destination": "/manage-users.html"
      },
      {
        "source": "/menu",
        "destination": "/menu.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      }
    ]
  }
}
