{
  "hosting": {
    "public": "public", // Carpeta donde se encuentran tus archivos HTML
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/upload",
        "destination": "/upload.html"
      },
      {
        "source": "/download",
        "destination": "/download.html"
      },
      {
        "source": "/manage-users",
        "destination": "/manage-users.html"
      }
    ]
  }
}
