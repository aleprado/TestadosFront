rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ✅ REGLAS DE SEGURIDAD: Solo usuarios autenticados pueden acceder
    
    // Clientes - permitir acceso anónimo para app mobile
    match /Clientes/{clienteId} {
      allow read, write: if request.auth != null || request.auth == null;
      
      // Subcolecciones de localidades
      match /Localidades/{localidadId} {
        allow read, write: if request.auth != null || request.auth == null;
      }
    }
    
    // Usuarios - permitir acceso anónimo para app mobile
    match /Usuarios/{userId} {
      allow read, write: if request.auth != null || request.auth == null;
    }
    
    // Rutas - permitir acceso anónimo para app mobile
    match /Rutas/{rutaId} {
      allow read, write: if request.auth != null || request.auth == null;
      
      // Subcolecciones de recorrido de ruta
      match /RutaRecorrido/{recorridoId} {
        allow read, write: if request.auth != null || request.auth == null;
      }
    }
    
    // Denegar acceso a todas las demás colecciones
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
